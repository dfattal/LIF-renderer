{
  "name": "lif-renderer",
  "version": "0.1.0",
  "description": "A THREE.js holographic projector renderer for RGB+Depth (Light Field) images",
  "type": "module",
  "main": "dist/lif-renderer.cjs.js",
  "module": "dist/lif-renderer.module.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:types",
    "build:lib": "vite build",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "build:demo": "vite build --mode demo",
    "preview": "vite preview",
    "preview:demo": "vite preview --outDir dist-demo",
    "deploy": "npm run build:demo && gh-pages -d dist-demo",
    "clean": "rm -rf dist dist-demo node_modules"
  },
  "keywords": [
    "threejs",
    "light-field",
    "holographic",
    "depth-map",
    "rgb-d",
    "3d-reconstruction"
  ],
  "author": "David Fattal",
  "license": "MIT",
  "peerDependencies": {
    "three": "^0.173.0"
  },
  "devDependencies": {
    "@types/three": "^0.173.0",
    "gh-pages": "^6.3.0",
    "three": "^0.173.0",
    "typescript": "^5.7.2",
    "vite": "^6.3.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-glsl": "^1.3.0"
  }
}
